@page "/"
@using Application.Interface
@rendermode RenderMode.InteractiveWebAssembly
@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>


<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4">
                <h1 class="card-title text-primary mb-4">Welcome to SafeMessaging</h1>
                <p class="card-text lead">
                    SafeMessaging is a secure and user-friendly platform designed to keep your messages private and safe.
                    Experience fast, encrypted communication tailored to your needs.
                </p>
                <p>
                    Whether you're connecting with friends, family, or colleagues, SafeMessaging ensures your privacy is our top priority.
                </p>
                <div class="d-grid">
                    <button class="btn btn-primary btn-lg" @onclick="NavigateToLogin">Get Started</button>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }
}
